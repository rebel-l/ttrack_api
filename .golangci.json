{
    "issues": {
        "exclude-rules": [
            {
                "path": "main.go",
                "linters": [
                    "wsl"
                ]
            },
            {
                "path": "_test.go",
                "linters": [
                    "cyclop",
                    "exhaustivestruct",
                    "funlen",
                    "varnamelen"
                ]
            }
        ],
        "exclude-dirs": [
            "reports",
            "scripts"
        ],
        "exclude-use-default": false,
        "max-issues-per-linter": 0,
        "max-same-issues": 0
    },
    "linters": {
        "enable-all": true,
        "disable": [
            "deadcode",
            "exhaustivestruct",
            "gochecknoglobals",
            "golint",
            "ifshort",
            "interfacer",
            "maligned",
            "nosnakecase",
            "scopelint",
            "structcheck",
            "tagliatelle",
            "varcheck"
        ]
    },
    "linters-settings": {
        "varnamelen": {
            "max-distance": 30
        }
    },
    "run": {
        "tests": true
    }
}
